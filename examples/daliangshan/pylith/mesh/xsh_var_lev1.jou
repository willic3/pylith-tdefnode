# ----------------------------------------------------------------------
# Set units to SI.
# ----------------------------------------------------------------------
reset
undo off
set crash save off
${Units('si')}

# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
import Cubit 'xsh_geometry.cub'

# ----------------------------------------------------------------------
# Set meshing scheme and sizing.
# ----------------------------------------------------------------------
volume all scheme tetmesh
${dxInner=2.0*km}
${dxMid=4.0*km}
${dxOuter=60.0*km}
surface 25 27 26 24 23 size {dxOuter}
surface 31 29 size {dxMid}
surface 39 to 53 size {dxInner}

# ----------------------------------------------------------------------
# Create volume mesh
# ----------------------------------------------------------------------
mesh volume all

# ----------------------------------------------------------------------
# Create nodesets and material blocks.
# ----------------------------------------------------------------------
playback 'xsh_bc.jou'

# ----------------------------------------------------------------------
# Export mesh.
# ----------------------------------------------------------------------
export mesh "xsh_var_lev1.exo" dimension 3 overwrite
